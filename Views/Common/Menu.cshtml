@model MenuModel
@using Nop.Web.Models.Common;
<ul class="topmenu">
    @Html.Action("WidgetsByZone", "Widget", new { widgetZone = "header_menu_before" })
    <li><a href="@Url.RouteUrl("HomePage")">@T("HomePage")</a></li>
    @if (Model.RecentlyAddedProductsEnabled)
    {
        <li><a href="@Url.RouteUrl("RecentlyAddedProducts")">@T("Products.NewProducts")</a>
        </li>
    }
    <li><a href="@Url.RouteUrl("HomePageBestSellers")">@T("Bestsellers")</a> </li>
    <li><a href="@Url.RouteUrl("ProductsWithDiscount")">@T("Sales")</a> </li>
    @*<li><a href="@Url.RouteUrl("ProductSearch")">@T("Search")</a> </li>*@
    <li><a href="@Url.RouteUrl("CustomerInfo")">@T("Account.MyAccount")</a></li>
    @if (Model.BlogEnabled)
    {
        <li><a href="@Url.RouteUrl("Blog")">@T("Blog")</a></li>
    }
    @if (Model.ForumEnabled)
    {
        <li><a href="@Url.RouteUrl("Boards")">@T("Forum.Forums")</a></li>
    }
    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "Quienes-somos" })">@T("AboutUs")</a></li>
    <li><a href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
    @*<li><a href="@Url.RouteUrl("Topic", new { SystemName = "Contactar" })">@T("ContactUs")</a></li>*@     
    @Html.Action("WidgetsByZone", "Widget", new { widgetZone = "header_menu_after" })
</ul>
