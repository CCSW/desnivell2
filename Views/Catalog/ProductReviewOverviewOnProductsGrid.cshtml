@model ProductReviewOverviewModel
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@{
    int ratingPercent = 0;
    if (Model.TotalReviews != 0)
    {
        ratingPercent = ((Model.RatingSum * 100) / Model.TotalReviews) / 5;
    }
}
@if (Model.AllowCustomerReviews)
{
    if (Model.TotalReviews > 0)
    {
        /*CSS stars: http://www.thebroth.com/blog/119/css-rating-stars*/
        <div class="product-reviews-overview">
            <div class="product-review-box">
                <div class="rating">
                    <div style="width: @(ratingPercent)%">                                                                
                    </div>                    
                </div>
                
            </div>
            <div class="product-numberReviews">
                        <a href="@Url.RouteUrl("ProductReviews", new { productId = Model.ProductId })">(@Model.TotalReviews)</a>
                </div>
                       
        </div>
    }
}