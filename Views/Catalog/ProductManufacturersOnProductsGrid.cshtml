@model IList<ManufacturerModel>
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    
    <div class="manufacturers">       
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Manufacturer", new { manufacturerId = item.Id, SeName = item.SeName })">@T("ShowAllFrom") @item.Name</a>
            if (i != Model.Count - 1)
            {
            <text>,</text>
            }
        }
    </div>
}